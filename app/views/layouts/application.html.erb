<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= full_title(yield(:title)) %></title>
    <%= stylesheet_link_tag    "application-all", :media => "screen, tv, projection" %>
    <%= stylesheet_link_tag    "application-print", :media => "print, handheld" %>
    <%= yield(:extraheadstyle) %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    
    <%= render 'layouts/shim' %>
    <%= yield(:extrahead) %>
  </head>
  <body>
    <%= render 'layouts/header' %>
    <div id="holder">
      

      <div id="#body" class="container-fluid">

        <div class="row-fluid">
          <aside class="span2">
            <%= yield(:aside) %>
          </aside>

          <div class="span8">
            <% if flash.any? %>
              <div class="row-fluid">
                <div class="span12">
                  <% flash.each do |key, value| %>
                    <%= content_tag(:div, value, class: "alert alert-#{key}") %>
                  <% end %>
                </div>
              </div>
            <% end %>
            <div class="row-fluid">
              <div class="span12">
                <%= yield %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%= debug(params) if Rails.env.development? %>
      <%= render 'layouts/footer' %>
    </div>
  </body>
</html>