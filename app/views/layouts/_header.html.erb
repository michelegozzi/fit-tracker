	<nav class="navbar-inner">
		<%= link_to "Fit Tracker", root_path, id: "logo", :class => 'brand' %>

		<ul class="nav">
			<li><%= link_to "Home", root_path %></li>
			<li><%= link_to "About", about_path %></li>
			<li><%= link_to "Contact", contact_path %></li>

			<% if signed_in? %>
				
				<% if signed_in_as_admin? %>
