<% if object.errors.any? %>

	<div class="row-fluid">
		<div id="error_explanation" class="span8 offset2">
			<div class="alert alert-error">
				The form contains <%= pluralize(object.errors.count, "error") %>.
			</div>
			<ul>
				<% object.errors.full_messages.each do |msg| %>
				<li>* <%= msg %></li>
				<% end %>
			</ul>
		</div>
	</div>
<% end %>