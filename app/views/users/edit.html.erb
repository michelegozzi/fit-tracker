<% provide(:title, "Edit user") %> 
<h1>Update your profile</h1>

<%= render :partial => 'shared/aside', :locals => { :uobj => @user, :bcobj => nil } %>

<%= form_for(@user) do |f| %>
  <div class="row-fluid">
  	<div class="span4 offset4">
		
			<%= render 'fields', f: f %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4 offset4">
			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    </div>
  </div>
<% end %>
<div class="row-fluid">
  <div class="span4 offset4">
		<%= gravatar_for @user %>
		<!-- 9.6 Exercise 2 -->
		<%= link_to "change", "http://gravatar.com/emails", :target => "_blank" %>

	</div>
</div>