<h3><%= categoryKey.capitalize %> (<span id="<%= categoryKey %>-total-calories">0</span>):</h3>
<div id="<%= categoryKey %>-meals-container">
	<!-- class="ui-widget meals-container" -->
	<table id="<%= categoryKey %>-meals" class="table table-bordered fit-table">
		<thead>
			<tr>
				<th>Name</th>
				<th>Time</th>
				<th>Calories</th>
				<th><%= link_to_add_meal_fields '<i class="icon-plus icon-white"></i>'.html_safe, f, :meals, categoryId %></th>
			</tr>
		</thead>
		<tbody categoryKey="<%= categoryKey %>" categoryId="<%= categoryId %>" >
			<%= f.fields_for :meals, meals do |meal_fields| %>
				<%= render :partial => 'meal_fields', :locals => { :f => meal_fields, :categoryId => categoryId } %>
			<% end %>

		</tbody>
	</table>
	<script type="text/javascript">
	initTotalCalories('<%= categoryKey %>');
	</script>
</div>