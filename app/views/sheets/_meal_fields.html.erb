<tr>
	<td class="name">
		<%= f.text_field :name, :class => 'meal-name-field' %>
	</td>
	<td class="time">
		<div class="input-append bootstrap-timepicker">
		<%= f.hidden_field :timepart, :class => 'meal-timepart-field' %>
		<%= f.text_field :time, :class => 'input-small meal-time-field' %>
		<span class="add-on"><i class="icon-time"></i></span>
		</div>
	</td>
	<td class="calories">
		<%= f.number_field :calories, :class => 'meal-calories-field' %>
	</td>
	<td class="remove">
		<%= link_to_remove_fields '<i class="icon-remove"></i>'.html_safe, f, :meals %>
		<%= f.hidden_field :category, :class => 'meal-category-field' %>
	</td>
</tr>