<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row-fluid">
  <div class="offset5 span4">
		<%= form_tag sessions_path do %>
			
      <p>
			<%= label_tag :email %>
			<%= text_field_tag :email, params[:email], class: "span6" %>

			<%= label_tag :password %>
			<%= password_field_tag :password, '', class: "span6" %>
      </p>
      <p>
			<%= submit_tag "Sign in", class: "btn btn-primary span3" %>
      </p>
		<% end%>

		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>