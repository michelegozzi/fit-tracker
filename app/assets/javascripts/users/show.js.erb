jQuery(document).ready(function() {

	// initialize the calendar
	jQuery('#calendar').fullCalendar({
		
		events: '/sheets',

		dayClick: function(date, allDay, jsEvent, view) {

			if (allDay) {
				console.log('Clicked on the entire day: ' + date);
			}
			else {
				console.log('Clicked on the slot: ' + date);
			}
			console.log('a day has been clicked!');
			document.location = "/sheets/new?date="+date;
		},

		eventClick: function(calEvent, jsEvent, view) {
			console.log('Event: ' + calEvent.title);
			console.log('Coordinates: ' + jsEvent.pageX + ',' + jsEvent.pageY);
			console.log('View: ' + view.name);
			document.location = "/sheets/" + calEvent.id; // + "?title=" + calEvent.title;
		}
	})

	jQuery('#userSheetsTable > tbody').rowLinkTo( { restPath: '/sheets/' } );
});